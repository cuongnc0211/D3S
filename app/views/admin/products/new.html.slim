section.content
  .row
    .col-md-8.col-md-offset-2
      .box.box-success
        .box-header.with-border.text-center
          h3.box-title= t('.create_product')
        .box-body
          = form_for [:admin, @product], html: {class: "form-horizontal"} do |f|
            = render "form", f: f, product_translations: @product_translations
            = f.submit t(".submit"), class: "form-control btn btn-block btn-primary btn-flat"
